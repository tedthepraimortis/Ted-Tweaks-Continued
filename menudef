// I'm gonna likely clean this up soon once I remember to actually do that. This all should be LANGUAGE'd also. - [Ted]
OptionMenu "TedTweaks"
{
    class HD_ToolTipOptionMenu
    Title "$MENU_TTM_TITLE"
    StaticText ""
    StaticText "$MENU_TTM_MISC", "Green"
    Option "$MENU_TTM_MISC_INVULBREAK", "hd_nonecroghost", "OnOff"
    HDTooltip "$MENU_TTM_MISC_INVUL"
    Option "$MENU_TTM_MISC_MAPDRUGREMOVAL2", "hd_mapdrugremoval", "OnOff"
    HDTooltip "$MENU_TTM_MISC_MAPDRUGREMOVAL1"
    Option "Blursphere Text: ", "hd_blurspheretextlump", "OnOff"
    HDTooltip "Whether Blursphere will use the vanilla text lumps or the older blurspheretexts lump."
    Option "Blursphere with Liteamp Goggles: ", "hd_noblurwithliteamp", "OnOff"
    HDTooltip "Enables the Blursphere being able to be used with the Liteamp goggles."
    Option "Liteamp Goggles FOV Changes: ", "hd_liteampgogglefoveffect", "OnOff"
    HDTooltip "Whether or not the Liteamp Goggles will change the player's FOV."
    Option "Liteamp Goggles Flicker: ", "hd_liteampflicker", "OnOff"
    HDTooltip "Whether or not the Liteamp Goggles will flicker at low power."
    Slider "Player Flinch: ", "hd_flinchmultiplier", 0, 2., 0.1, 1
    HDTooltip "Multiplies how much the player flinches when they are hit with a melee attack."
    Option "Easier Climbing: ", "hd_easierclimbing", "OnOff"
    HDTooltip "Whether or not players will flinch more or less when climbed on."
    Option "Radsuit Overlay: ", "hd_radsuitoverlay", "OnOff"
    HDTooltip "Whether the Radsuit will use a screen overlay or a screen tint, like vanilla."
    Option "Incap Grabs: ", "hd_incapgrabs", "OnOff"
    HDTooltip "Whether or not the player can grab items whilst incapped."
    Option "Low Health Jitters: ", "hdp_lowhealth_jitters", "OnOff"
    HDTooltip "\c[Red][WIP]\c- Enables/Disables the low health screen jitters."
    Option "Low Health Screen Desat: ", "tt_lowhealth_effects", "OnOff"
    Slider "Activation Threshold: ", "tt_lowhealth_int", 1, 100, 1, 0
    HDTooltip "\c[Red][WIP]\c- Enables/Disables low health desaturation and what health value to start the effect at."
    Option "New Compass: ", "hd_newcompass", "OnOff"
    HDTooltip "\c[Red][WIP]\c- Whether to use the old FullHud-only Compass or have it on your HUD at all times."
    Option "Enemy/Item Spawn Changes: ", "tt_spawning_overhaul", "OnOff"
    HDTooltip "\c[Red][WIP]\c- Enables/Disables the Ted-Tweaks spawning overhaul, increasing enemy and item variety and locations."
    Option "Vulc Repairer: ", "hd_vulcfixer", "OnOff"
    HDTooltip "Whether you can repair a vulcanette by tossing it on a soulsphere or megasphere.\n\c[Red]Note: Requires a map reload to change!\c-"
}

AddOptionMenu "OptionsMenu"
{
    SubMenu "$MENU_TTOPTIONS", "TedTweaks"
}

AddOptionMenu "HDAddonMenu"
{
    SubMenu "$MENU_TTOPTIONS", "TedTweaks"
}

// Main Menu changes because the PatchItem sprites are ugly and inconvenient for my sadistic tendencies. - [Ted]
ListMenu "MainMenu"{
	IfGame(Doom,Chex){
		StaticPatch 94,2,"M_DOOM"
		Position 97, 72
	}
	IfGame(Strife){
		StaticPatch 84,2,"M_STRIFE"
		Position 97, 45
	}
	IfGame(Heretic){
		StaticPatch 88,0,"M_HTIC"
		StaticPatch 40,10,"M_SKL01"
		StaticPatch 232,10,"M_SKL00"
		Position 110, 56
	}
	IfGame(Hexen){
		StaticPatch 88,0,"M_HTIC"
		StaticPatch 37,80,"FBULB0"
		StaticPatch 278,80,"FBULA0"
		Position 110,56
	}
	IfGame(Doom,Strife,Chex){
		TextItem "$MNU_NEWGAME","n","HDNewGameLoadoutMenu"
			TextItem "$MNU_HDOPTIONS","o","HDOptionsMenu"
		ifOption(SwapMenu){
			TextItem "$MNU_LOADG","l","LoadGameMenu"
			TextItem "$MNU_SAVEG","s","SaveGameMenu"
			TextItem "$MNU_OPTION","o","OptionsMenu"
		}else{
			TextItem "$MNU_OPTION","o","OptionsMenu"
			TextItem "$MNU_LOADG","l","LoadGameMenu"
			TextItem "$MNU_SAVEG","s","SaveGameMenu"
		}
		TextItem "$MNU_QUITG","q","QuitMenu"
	}
	IfGame(Heretic,Hexen){
		TextItem "$MNU_NEWGAME","n","PlayerclassMenu"
		TextItem "$MNU_OPTIONS","o","OptionsMenu"
		TextItem "$MNU_GAMEFILES","g","GameFilesMenu"
		TextItem "$MNU_INFO","i","ReadThisMenu"
		TextItem "$MNU_QUITGAME","q","QuitMenu"
	}
}